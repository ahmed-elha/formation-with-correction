{
  "compilerOptions": {
    "module": "CommonJS",
    "types": ["node", "jest"],
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}